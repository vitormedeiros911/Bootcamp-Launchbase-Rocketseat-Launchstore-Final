{% extends "layout.njk" %}
{% import "parts/card.njk" as card %}

{% block content %}
  {% call card.render("Editar Produto", "container form")%}
  <form class="" method="POST" action="/products?_method=PUT" enctype="multipart/form-data">
    <div class="fields">
      {%include "products/fields.njk"%}
    </div>

    <input type="hidden" name="id" value="{{product.id}}">

    <button class="button edit" type="submit" onclick="Validate.allFields(event)">Atualizar</button>

  </form>

  <form id="formDelete" action="/products?_method=DELETE" method="post">
    <input type="hidden" name="id" value="{{product.id}}">
    <button class="button delete" type="submit">Deletar</button>
  </form>
  {% endcall %}
  <script>
    const formDelete = document.querySelector("#formDelete")
    formDelete.addEventListener("submit", async function (event) {
      const confirmar = await confirm("Deseja deletar o produto?")
      if (!confirmar) {
        event.preventDefault()
      }
    })
  </script>
{% endblock content %}
